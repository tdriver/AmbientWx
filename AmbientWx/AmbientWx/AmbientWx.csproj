<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <PackageId>AmbientWx</PackageId>
    <Version>2.0</Version>
    <Authors>DriverWare</Authors>
    <PackageDescription>A .Net Standard SDK for accessing a personal weather station from Ambient Weather</PackageDescription>
    <RepositoryUrl>https://github.com/tdriver/AmbientWx</RepositoryUrl>
    <LicenseUrl>https://github.com/tdriver/AmbientWx/blob/master/LICENSE</LicenseUrl>
    <PackageTags>Weather;Ambient Weather;AmbientWeather;AmbientWx;Weather SDK</PackageTags>
    <PackageReleaseNotes>Adding Device Data API.</PackageReleaseNotes>
    <license>GPL-3.0</license>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="AmbientWx.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
